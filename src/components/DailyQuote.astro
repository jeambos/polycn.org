---
/* src/components/DailyQuote.astro */
const { quote, author } = Astro.props;
---

<blockquote class="daily-quote">
  <p class="text">“{quote}”</p>
  <footer class="author">—— {author}</footer>
</blockquote>

<style>
  .daily-quote {
    margin: 3rem auto;
    max-width: 800px;
    text-align: center;
    border-left: none; /* 覆盖 Starlight 默认的左边框 */
    padding: 2rem;
    background: linear-gradient(to right, var(--sl-color-gray-6), transparent, var(--sl-color-gray-6));
    border-radius: 8px;
  }
  .text {
    font-size: 1.2rem;
    font-style: italic;
    font-family: "KaiTi", "STKaiti", serif; /* 使用楷体，更有引文感 */
    color: var(--sl-color-white);
    margin-bottom: 0;
  }
  .author {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--sl-color-accent);
    font-weight: bold;
    font-family: sans-serif;
  }
</style>